# This is an EditorConfig file
# https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
max_line_length = 100
insert_final_newline = true
indent_style = space

[*.lua]
max_line_length = 80

[lua/*.lua]
# Align with the Vim help file hard wrap.
max_line_length = 82

[Makefile]
indent_style = tab
indent_size = 4
